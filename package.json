{
  "name": "@modular-data/hmpps-authoring-lib-ui",
  "version": "9999.9999.9999",
  "description": "Authoring UI for HMPPS Digital Prison Reporting (DPR), aligned with GOV.UK Design System and MOJ Frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/modular-data/hmpps-authoring-lib-ui.git"
  },
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "setup": "npm ci && hmpps-npm-script-run-allowlist",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "build:types": "tsc --project tsconfig.json",
    "package": "npm run build && npm run build:types",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\" \"tsc --project tsconfig.json --watch\"",
    "start-feature": " node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint:check": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist test_results",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "dist/assets/**/*",
    "views/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": "^22",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lint": "^6.7.0",
    "@codemirror/state": "^6.5.2",
    "@faker-js/faker": "^9.8.0",
    "@ministryofjustice/frontend": "^6.0.0",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.1-alpha.4",
    "@ministryofjustice/hmpps-rest-client": "^0.0.1-alpha.9",
    "@preact/signals-core": "^1.11.0",
    "@supabase/supabase-js": "^2.47.10",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "classnames": "^2.5.1",
    "codemirror": "^6.0.1",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^8.0.3",
    "csrf-sync": "^4.2.0",
    "debounce": "^2.2.0",
    "deepmerge": "^4.3.1",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.10.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "method-override": "^3.0.0",
    "nocache": "^4.0.0",
    "node-sql-parser": "^5.3.13",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "qs": "^6.14.0",
    "redis": "^4.7.0",
    "superagent": "^10.2.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@tsconfig/node22": "^22.0.1",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/method-override": "^3.0.0",
    "@types/node": "^22.15.12",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/qs": "^6.14.0",
    "@types/superagent": "^8.1.9",
    "audit-ci": "^7.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cypress": "^14.3.2",
    "cypress-multi-reporters": "^2.0.5",
    "esbuild": "^0.25.4",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.5.1",
    "mocha-junit-reporter": "^2.2.1",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.1.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    }
  }
}
