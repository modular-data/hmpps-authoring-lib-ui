{% from "govuk/components/table/macro.njk" import govukTable %}

{% set classes = params.classes | default("") %}
{% set head = params.head | default([]) %}
{% set rows = params.rows | default([]) %}

{% set govukTableClasses = classNames("govuk-table--small-text-until-tablet", classes) %}

<div class="moj-scrollable-pane">
  {{
    govukTable({
      classes: govukTableClasses,
      firstCellIsHeader: true,
      attributes: {
        "data-module": "app-server-side-sortable-table"
      },
      head: head,
      rows: rows | fallbackTableEmptyCells
    })
  }}
</div>
